<ul class="site-header-actions {% unless customer %}site-header-actions__single {% endunless %}" data-header-actions>
  {% if shop.customer_accounts_enabled %}
    {% unless customer %}
      
  <li class="site-header-actions__account-link">
  	<a href="#swym-wishlist" class="site-header_account-link-text">
         Wishlist
        </a>
  </li>
  <li class="site-header-actions__account-link">
        
        {% comment %}
        <span class="site-header__account-icon">
          {% render 'icon-library', id: 'icon-account' %}
        </span>
        {% endcomment %}
        
        <a href="{{ routes.account_login_url }}" class="site-header_account-link-text">
          {{ 'header.account.login' | t }}
        </a>
      </li>
    {% else %}
  	  <li class="site-header-actions__account-link"></li>
      <li class="site-header-actions__account-link">
        
        {% comment %}
        <span class="site-header__account-icon">
          {% render 'icon-library', id: 'icon-account' %}
        </span>
        {% endcomment %}
        
        <span class="site-header__account-links">
         <a href="{{ routes.account_url }}" class="site-header__account-link--account">Hello, {{ customer.name }}</a>
        </span>
        
      </li>
      <li class="site-header-actions__account-link">

        <span class="site-header__account-links">
          <a href="{{ routes.account_logout_url }}" class="site-header__account-link--logout" data-no-instant>{{ 'header.account.logout' | t }}</a>
        </span>

      </li>
    {% endunless %}
  {% endif %}
</ul>
